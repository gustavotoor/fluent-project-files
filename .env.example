
# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/projectmanager

# JWT Secret Key (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-here-min-256-bits

# Chat Configuration
# Set to 'true' for simulation mode, 'false' for n8n webhook integration
CHAT_SIMULATION=true

# n8n Webhook URL (only used when CHAT_SIMULATION=false)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/envia-mensagem

# Upload Configuration
UPLOAD_FOLDER=/app/uploads
MAX_FILE_SIZE=10485760

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Environment
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO
