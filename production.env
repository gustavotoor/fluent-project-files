
# Production Environment Configuration
NODE_ENV=production
ENVIRONMENT=production

# Database Configuration (UPDATE WITH REAL VALUES)
DATABASE_URL=postgresql://user:password@db-host:5432/projectmanager

# JWT Secret (GENERATE A SECURE SECRET)
JWT_SECRET=your-super-secure-jwt-secret-key-min-256-bits

# Chat Configuration
CHAT_SIMULATION=false
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/envia-mensagem

# Upload Configuration
UPLOAD_FOLDER=/app/uploads
MAX_FILE_SIZE=10485760

# CORS Configuration (UPDATE WITH YOUR DOMAIN)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=WARNING

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security (ENABLE IN PRODUCTION)
HTTPS_ONLY=true
SECURE_COOKIES=true
